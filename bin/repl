#!/usr/bin/env python
import sys, os
sys.path.append(os.getcwd() + "/..")

import readline

readline.parse_and_bind('tab: complete')
readline.parse_and_bind('set editing-mode emacs')

from lib.vivid import vivid
from lib import __version__, __github__, __slogan__


def repl():
    banner()
    while True:
        s = raw_input('scheme>')
        vivid(s)


def banner():
    print '''The Vivid Schemer %s - %s
%s
      ___                       ___                      _____
     /\  \        ___          /\  \        ___         /::\  \\
     \:\  \      /\__\         \:\  \      /\__\       /:/\:\  \\
      \:\  \    /:/__/          \:\  \    /:/__/      /:/  \:\__\\
  ___  \:\__\  /::\  \      ___  \:\__\  /::\  \     /:/__/ \:|__|
 /\  \ |:|  |  \/\:\  \__  /\  \ |:|  |  \/\:\  \__  \:\  \ /:/  /
 \:\  \|:|  |   ~~\:\/\__\ \:\  \|:|  |   ~~\:\/\__\  \:\  /:/  /
  \:\__|:|__|      \::/  /  \:\__|:|__|      \::/  /   \:\/:/  /
   \::::/__/       /:/  /    \::::/__/       /:/  /     \::/  /
    ~~~~           \/__/      ~~~~           \/__/       \/__/
''' % (__version__, __slogan__, __github__)


if __name__ == '__main__':
    repl()
